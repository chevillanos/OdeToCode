@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form>
    <div class="form-group">
        <div class="input-group mb-3">
            <input type="search" asp-for="SearchTerm" name="searchTerm" class="form-control" />
            <div class="input-group-append">
                <button class="btn btn-outline-secondary">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" class="btn btn-lg">
                    <i class="fa fa-search-plus" aria-hidden="true"></i>
                </a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id" class="btn btn-lg">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-outline-secondary">Add New</a>