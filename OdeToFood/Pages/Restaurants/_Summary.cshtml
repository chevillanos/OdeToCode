@using OdeToFood.Core
@model Restaurant

<div class="m-4">
    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <span>Location: @Model.Location</span>
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div class="card-footer">
            <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-lg">
                <i class="fa fa-search-plus" aria-hidden="true"></i>
            </a>
            <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-lg">
                <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
            <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-lg">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </a>
        </div>
    </div>
</div>
